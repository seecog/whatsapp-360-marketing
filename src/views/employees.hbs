          url = "/api/v1/employees/" + currentEditingId;
          method = "PUT";
        }

        try {
          const res = await fetch(url, {
            method: method,
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(base),
          });

          if (!res.ok) {
            let err;
            try {
              err = await res.json();
